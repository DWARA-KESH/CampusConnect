<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="678dp"
        android:layout_margin="8dp"
        android:background="?android:selectableItemBackground"
        android:elevation="8dp"
        app:cardCornerRadius="12dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center"
                    android:text="Complaint form"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/fullNameView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="?android:attr/selectableItemBackground">

                    <EditText
                        android:id="@+id/editTextFullName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="Full Name"
                        android:padding="12dp"
                        android:textSize="16sp"

                        tools:ignore="TouchTargetSizeCheck" />

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/idView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="?android:attr/selectableItemBackground">

                    <EditText
                        android:id="@+id/editTextStudentID"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="Student ID"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:background="@android:color/transparent"
                        android:foreground="?android:attr/selectableItemBackground"

                        />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/numberView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="?android:attr/selectableItemBackground">

                    <EditText
                        android:id="@+id/editTextStudentNumber"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="Phone number"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:background="@android:color/transparent"
                        android:foreground="?android:attr/selectableItemBackground"

                        />

                </androidx.cardview.widget.CardView>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="sans-serif"
                    android:paddingStart="5dp"
                    android:gravity="center_vertical"
                    android:text="Grievance Details:"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinnerGrievanceType"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="7.9dp"
                    android:layout_marginRight="7.9dp"
                    android:paddingStart="8.5dp"
                    android:paddingEnd="8.5dp"
                    android:entries="@array/grievance_types"
                    android:background="@drawable/spinner_rounded"
                    android:hint="Select Grievance Type" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/descriptionView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="?android:attr/selectableItemBackground">

                    <EditText
                        android:id="@+id/editTextDescription"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:background="@android:color/transparent"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:hint="Description"
                        android:inputType="textMultiLine"
                        android:lines="4"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp" />

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/locationView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="?android:attr/selectableItemBackground">

                    <EditText
                        android:id="@+id/editTextLocation"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="Location"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:background="@android:color/transparent"
                        android:foreground="?android:attr/selectableItemBackground" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="12dp"
                    android:text="Witness Info(if any):"
                    android:paddingStart="5dp"
                    android:fontFamily="sans-serif"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/witnessNameView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="?android:attr/selectableItemBackground">

                    <EditText
                        android:id="@+id/editTextWitnessName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="Name"
                        android:padding="12dp"
                        android:textSize="16sp"

                        tools:ignore="TouchTargetSizeCheck" />

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/witnessIdView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="?android:attr/selectableItemBackground">

                    <EditText
                        android:id="@+id/editTextWitnessID"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="Student ID"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:background="@android:color/transparent"
                        android:foreground="?android:attr/selectableItemBackground"

                        />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/witnessNumberView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="?android:attr/selectableItemBackground">

                    <EditText
                        android:id="@+id/editTextWitnessNumber"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="Phone number"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:background="@android:color/transparent"
                        android:foreground="?android:attr/selectableItemBackground"

                        />

                </androidx.cardview.widget.CardView>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="12dp"

                    android:text="Desired resolution:"
                    android:paddingStart="5dp"
                    android:fontFamily="sans-serif"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/resolutionView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="?android:attr/selectableItemBackground">

                    <EditText
                        android:id="@+id/editTextResolution"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:background="@android:color/transparent"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:hint="Suggestions.."
                        android:inputType="textMultiLine"
                        android:lines="4"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp" />

                </androidx.cardview.widget.CardView>

                <Button
                    android:id="@+id/buttonSubmit"
                    android:layout_width="100dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/roundedbutton"
                    android:textColor="@color/hello_color"
                    android:text="Submit" />

            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

</LinearLayout>
